<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_bosque2">

    <Button
        android:id="@+id/inventario"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="inventario"
        android:text="Inventario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iniciar" />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="iniciarPartida"
        android:text="Iniciar Partida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/consultar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="91dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="consultarUsuario"
        android:text="Consultar usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="91dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="editarUsuario"
        android:text="editar usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tienda"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="27dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="tienda"
        android:text="Tienda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estadisticas" />

    <Button
        android:id="@+id/estadisticas"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="27dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="estadisticasPartidas"
        android:text="Estadisticas de partidas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>